{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  
  "functions": {
    "api/index.ts": {
      "includeFiles": "server/**"
    }
  },
  
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/((?!api/|assets/|favicon.png|_vite/|src/).*)",
      "destination": "/index.html"
    }
  ]
}
